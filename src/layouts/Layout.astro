---

interface Props {
	title: string;
}

const { title } = Astro.props;
// Componentes
import Header from '../components/landing/Header.astro';
import Footer from '../components/landing/Footer.astro';
import Hero from '../components/global/hero.astro';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>
	</head>
		<body>
            <Hero/>
            <div>
                <div class="fixed top-0 h-screen w-screen z-[-3]">
                    <img src="images/hero-p.webp" alt="" class="object-cover h-full w-full " loading="eager">
                </div>
            </div>
        <div class="luis fixed top-0 h-screen w-screen z-[-2]">

        </div>
		<Header/>
		<main class="w-[84%] m-auto md:w-9/12">
			<slot />
		</main>
		<Footer/>
	</body>
   
</html>

<style is:global>
    html {
    font-family: 'Poppins' sans-serif;
	scroll-behavior: smooth;
    }
   
    .luis {
        background: linear-gradient(#010015, #0a0224fc,#000108);
    }

@media (width >= 768px) {
html {
    font-size: clamp(6px, .8vw, 15.6px);
}
}

@media (width <= 767px) {
html {
    font-size: clamp(6px, 2.3vw, 16px);
}
}
</style>