---
import BotonIngresa from './boton-ingresa.astro';
const { name, imgSrc, descripcion, link2} = Astro.props
---
<div class="flex flex-col gap-10 items-center justify-center py-10 px-20 md:px-5 min-w-[25rem] rounded-[3rem] md:rounded-[2rem]  border border-slate-400 drop-shadow-[0_0_40px_#4e08ff88]  w-auto  bg-[#00000034]">
    <img src={imgSrc} alt="" class="h-[23rem] w-[25rem] md:w-60 md:h-60 rounded-3xl" loading="lazy"/>
    <div class="flex flex-col gap-2 text-center">
        <span class="text-4xl font-bold">{name}</span>
        <span class="text-2xl">{descripcion}</span>
    </div>
  
        <BotonIngresa title="GitHub" link={link2}></BotonIngresa>
  
</div>
